#include <stdio.h>
#include <cs50.h>

int main(void)

{
    int height;         

    do
    {
        printf("Choose a number between 1 and 23: ");
        height = GetInt();
    } 
    while (height < 0 || height > 23);        
        printf("Height: %d\n", height);
           
    
    int a, b, c;
    
    for (a = 0; a < height; a++)
        {
            for (c = 0; c < a - height; c++)
                {
                   printf(" "); 
                }                            
            for (b = 0; b < a + 2; b++)            
                {                
                    printf("#");
                }
            printf("\n");
        }
}
